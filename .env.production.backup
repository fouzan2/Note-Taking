# Production Environment Configuration
# Copy this file to .env.production and update with real values
# NEVER commit the actual .env.production file to version control

# Application Settings
APP_NAME=NoteAPI
ENVIRONMENT=production
DEBUG=false
API_V1_STR=/api/v1

# Security - CHANGE ALL OF THESE
SECRET_KEY=your-production-secret-key-must-be-very-long-and-random
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS Settings - Update with your actual domains
BACKEND_CORS_ORIGINS=["https://yourdomain.com","https://api.yourdomain.com"]

# Database - Use strong passwords
POSTGRES_USER=prod_noteuser
POSTGRES_PASSWORD=very-strong-database-password
POSTGRES_DB=note_taking_prod
DATABASE_URL=postgresql+asyncpg://prod_noteuser:very-strong-database-password@postgres:5432/note_taking_prod

# Redis - Use strong password
REDIS_PASSWORD=very-strong-redis-password
REDIS_URL=redis://:very-strong-redis-password@redis:6379/0

# Celery
CELERY_BROKER_URL=redis://:very-strong-redis-password@redis:6379/1
CELERY_RESULT_BACKEND=redis://:very-strong-redis-password@redis:6379/2

# Email Settings - Configure with your email provider
SMTP_TLS=true
SMTP_PORT=587
SMTP_HOST=smtp.your-email-provider.com
SMTP_USER=your-smtp-username
SMTP_PASSWORD=your-smtp-password
EMAILS_FROM_EMAIL=noreply@yourdomain.com
EMAILS_FROM_NAME=NoteAPI

# File Upload Settings
MAX_UPLOAD_SIZE=5242880  # 5MB in bytes for production
ALLOWED_EXTENSIONS=["txt", "md", "pdf"]

# Rate Limiting - More restrictive for production
RATE_LIMIT_PER_MINUTE=30
RATE_LIMIT_PER_HOUR=500

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# OAuth2 Settings - Add your production OAuth credentials
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# Frontend URL - Your actual frontend domain
FRONTEND_URL=https://yourdomain.com

# Monitoring - Configure with your monitoring services
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Feature Flags
ENABLE_REGISTRATION=true
ENABLE_OAUTH=true
ENABLE_2FA=true

# SSL/TLS
SSL_CERT_PATH=/etc/ssl/certs/your-cert.pem
SSL_KEY_PATH=/etc/ssl/private/your-key.pem

# Backup Settings
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=30
S3_BACKUP_BUCKET=your-backup-bucket

# Performance
WORKER_CONNECTIONS=1000
KEEP_ALIVE_TIMEOUT=75

# Security Headers
HSTS_ENABLED=true
HSTS_MAX_AGE=31536000 