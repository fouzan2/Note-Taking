{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "Dockerfile"
  },
  "deploy": {
    "numReplicas": 1,
    "startCommand": "sh -c 'alembic upgrade head && gunicorn app.main:app -w 2 -k uvicorn.workers.UvicornWorker --bind 0.0.0.0:$PORT'",
    "restartPolicyType": "ALWAYS",
    "restartPolicyMaxRetries": 10
  },
  "healthcheck": {
    "type": "http",
    "path": "/health",
    "interval": 30,
    "timeout": 10
  }
} 