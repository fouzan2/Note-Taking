# Production Environment Variables
# Copy this file to .env.production and update with your values

# GCP Configuration
PROJECT_ID=note-463420
REGION=us-central1

# Application Settings
ENVIRONMENT=production
APP_NAME=Note Taking API
APP_VERSION=1.0.0

# Server Configuration
PORT=8080
WORKERS=1
LOG_LEVEL=INFO

# Database Configuration (Cloud SQL)
# This will be automatically set by Cloud Run using secrets
# DATABASE_URL will be constructed in the deployment

# Redis Configuration (Memorystore)
# REDIS_HOST will be automatically set during deployment
REDIS_DB=0
REDIS_DECODE_RESPONSES=True

# Security
# These will be stored in Google Secret Manager
# SECRET_KEY=<stored-in-secret-manager>
# API_KEY=<stored-in-secret-manager>

# JWT Configuration
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS Configuration
CORS_ORIGINS=["*"]  # Update with specific domains in production
CORS_CREDENTIALS=True
CORS_METHODS=["*"]
CORS_HEADERS=["*"]

# API Documentation
DOCS_URL=/docs
REDOC_URL=/redoc
OPENAPI_URL=/openapi.json

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_TIMES=100
RATE_LIMIT_SECONDS=60

# Monitoring
SENTRY_DSN=  # Add your Sentry DSN if using Sentry
PROMETHEUS_ENABLED=true

# Google Cloud Logging
USE_CLOUD_LOGGING=true
STRUCTURED_LOGGING=true 